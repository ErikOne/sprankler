Import('env')

myEnv=env.Clone()

interfaces = [
	'memintf',
	'utilsintf',
	'threadintf',
	'platformintf',	
	'loggingintf',
]

implementations = [
	'mem',
	'utils',
	'thread',
	'platform',
	'logging'
]

libs = []
libs.extend(interfaces)
libs.extend(implementations)

system_libs = ['zlog']

sprankler = myEnv.App('Sprankler','sprankler.c',LIBS=libs,SYSTEM_LIBS=system_libs)
myEnv.Alias('app',sprankler)